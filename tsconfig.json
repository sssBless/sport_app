{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "CommonJS",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "skipLibCheck": true,
    "jsx": "react-jsx",
    "baseUrl": ".",
    "paths": {
      "@/*": ["clientSide/src/*"],
      "@server/*": ["serverSide/src/*"]
    },
    "outDir": "./dist",
    "resolveJsonModule": true,
    "isolatedModules": true
  },
  "include": [
    "clientSide/src/**/*",
    "serverSide/src/**/*",
    "serverSide/types/**/*"
  ],
  "exclude": ["node_modules"]
}